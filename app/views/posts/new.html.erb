<h1>New Posty</h1>

<%= form_for :post, url: {action: :create } do |f| %>

<p>
  <%= f.label :text %></br>
  <%= f.text_area :text %></br>
</p>
<p>
  <%= f.label :public %>
  <%= f.check_box :public %>
  <%= f.submit %>
</p>

<p>
  <%= button_tag "Submit" %>
</p>

<% end %>

<%= link_to 'Go Back', posts_path %>

