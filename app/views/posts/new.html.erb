<h1>New Posty</h1>


<%= form_for :post, url: {action: :create } do |f| %>
<p>
  <%= f.label :text %></br>
  <%= f.text_area :text %></br>
</p>
<p>
  <%= f.label :public %>
  <%= f.check_box :public %>
  <%= f.select :expiration_date, [["Expiration Date"], ["One Day", Time.now + 120]] %>
  <%= f.submit %>
</p>

<p>
  
</p>
<% end %>
